# ==================================
# Trellis E-commerce Platform
# Environment Variables Template
# ==================================

# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ----------------------------------
# Authentication (Choose ONE)
# ----------------------------------

# Option 1: Firebase Authentication
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase Frontend (add to .env)
VITE_FIREBASE_API_KEY=AIza...
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id

# Option 2: Auth0 Authentication
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret
# AUTH0_BASE_URL=http://localhost:5000

# Option 3: Supabase Authentication
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=eyJ...

# ----------------------------------
# Database
# ----------------------------------

# Required: PostgreSQL connection string
# Get from Supabase, Neon, Railway, or your PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:5432/database

# ----------------------------------
# Session Management
# ----------------------------------

# REQUIRED: Strong random secret for session encryption
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-random-string-min-32-chars

# ----------------------------------
# AI Features (OpenAI)
# ----------------------------------

# Required for AI search, chatbot, recommendations
OPENAI_API_KEY=sk-...

# ----------------------------------
# Payment Processing (Stripe)
# ----------------------------------

# Backend (secret key)
STRIPE_SECRET_KEY=sk_test_...

# Frontend (publishable key)
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# ----------------------------------
# Email Service (SendGrid)
# ----------------------------------

SENDGRID_API_KEY=SG...

# ----------------------------------
# Application Settings
# ----------------------------------

# Environment (development or production)
NODE_ENV=development

# Server Port (default: 5000)
# PORT=5000

# ----------------------------------
# Testing (Optional - for Stripe testing)
# ----------------------------------

TESTING_STRIPE_SECRET_KEY=sk_test_...
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_...
